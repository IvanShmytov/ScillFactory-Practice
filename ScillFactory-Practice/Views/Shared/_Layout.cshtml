<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScillFactory_Practice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
              <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Users" asp-action="Authenticate" >Персональный блог</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Comments" asp-action="Index">Комментарии</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Tags" asp-action="Index" >Теги</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Пользователи</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Users" asp-action="Register" >Роли</a></li>
              </ul>
            </div>>
            <div class="col-md-3 text-end">
                <button type="button" class="btn btn-primary">Выйти</button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Разработка персонального блога - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
